
<div id="editPageContent" style=" float: left; width: 35%;">
    <h4 style="margin-top: 0; float: left;">Editing {{ page.name }}</h4>

    <br><br>
    {{ form_start(form, {
        'attr': {'id': 'update'}
    }) }}
    {{ form_widget(form) }}
    <div class="btn-group btn-group-lg" role="group" style="float: left">
        <button type="submit" class="btn btn-primary" formnovalidate>Update</button>
    </div>
    {{ form_end(form) }}

</div>




<div class="container-fluid" style=" float: right; width: 65%;">
    {% if modules is not null %}



        <h4 style="margin-top: 0; float: left;">Modules</h4>
        <button id="loadNewModule" type="button" class="btn btn-success btn-sm" style="float: right; margin-top: -6px;"><span class="glyphicon glyphicon-plus"></span> Add Module</button>
        <table class="table table-striped table-hover" id="modulesTable">
            <thead>
            <tr>
                <th>Module Name</th>
                <th>Rank</th>
                <th>size</th>
                <th>R</th>
            </tr>
            </thead>
            <tbody id="modules_ajaxTbody">
            {% for module in modules %}
                <tr class="module">
                    <td><span class="module-id">{{ module.id }}</span><a class="module-edit-link" href="#">{{ module.moduleInfo.name }}</a></td>
                    <td class="rank">{{ module.rank }}</td>
                    <td class="size">{{ module.size }}</td>
                    <td class="removeModule" data-removeLink="{{ module.id }}/remove-module"><span class="glyphicon glyphicon-trash" style=" color: rgba(196, 0, 0, 0.94); font-size: 17px;"></span></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>



    {% else %}
        <h4 style="margin-top: 0; float: left;">Modules</h4>
        <button id="loadNewModule" type="button" class="btn btn-success btn-sm" style="float: right; margin-top: -6px;"><span class="glyphicon glyphicon-plus"></span> Add Module</button>
        <br>
        <br>
        This page has no modules
    {% endif %}

</div>

<style>
    .module-id{
        display: none;
    }
    .module-edit-link, .removeModule{
        cursor: pointer;
    }
    .module{
        cursor: move;
    }
</style>




