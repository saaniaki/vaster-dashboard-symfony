    {{ parent() }}
<script>



    //setInterval(loadTable, 2000);


    function renderPage(name) {
        $.ajax({
            url: getPageRenderPath(name),
            success: function (data) {
                $("#renderPage").html(data);
            }
        });
    }

    $('.js_page_render').click(function() {
        renderPage($(this).text());
    });

    $( document ).ready(function() {

        //if page exists
        renderPage('{{ currentPage.name }}');


