<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}VDP{% endblock %}</title>

        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
            <link rel="stylesheet" href="{{ asset('css/bootstrap-theme.css') }}">
            <link rel="stylesheet" href="{{ asset('css/jquery-ui.min.css') }}">
            <link rel="stylesheet" href="{{ asset('js/toggle/css/themes/toggles-light.css') }}">
            <link rel="stylesheet" href="{{ asset('js/toggle/css/toggles-full.css') }}">
        {% endblock %}

        <link rel="icon" type="image/x-icon" href="{{ asset('images/favicon.png') }}" />

    </head>

    <body>

        {% block navBar %}{% endblock %}

        {% block body %}{% endblock %}

        {% block bot_navBar %}{% endblock %}

        {% block modals %}{% endblock %}

        {% block javascripts %}
            <script src="{{ asset('js/jquery-3.2.1.min.js') }}"></script>
            <script src="{{ asset('js/jquery-ui.min.js') }}"></script>
            <script src="{{ asset('js/bootstrap.js') }}"></script>
            <script src="{{ asset('js/toggle/toggles.min.js') }}"></script>
            <script src="https://code.highcharts.com/highcharts.src.js"></script>
        {% endblock %}

    </body>
</html>
